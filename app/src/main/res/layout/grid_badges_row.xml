<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin"
    android:clickable="true"
    android:elevation="@dimen/default_margin"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/default_margin">

        <FrameLayout
            android:layout_width="@dimen/default_image_size"
            android:layout_height="@dimen/default_image_size"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/ivBadge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/pay_bg" />

            <ImageView
                android:id="@+id/ivTick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:src="@drawable/group_2"
                android:visibility="gone" />

        </FrameLayout>

        <TextView
            android:id="@+id/tvBadgeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/default_margin"
            android:alpha=".99"
            android:gravity="center"
            android:text="@string/top_performer"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_minus" />

        <TextView
            android:id="@+id/tvBadgeDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/default_margin"
            android:alpha=".66"
            android:gravity="center"
            android:text="Lorem ipsum dolor sit consectetur adipiscing"
            android:textColor="@color/black"
            android:textSize="@dimen/smallest_text" />

    </LinearLayout>

</android.support.v7.widget.CardView>
