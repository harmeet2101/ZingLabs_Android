<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:orientation="vertical"
        android:padding="@dimen/default_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivSenderImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/oval" />

            <Button
                android:id="@+id/btnPersonalMessage"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/default_margin_35"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/default_margin"
                android:background="@drawable/orange_button"
                android:gravity="end|center"
                android:paddingLeft="@dimen/default_margin"
                android:paddingRight="@dimen/default_margin"
                android:text="@string/personal_message"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/smallest_text" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBroadcastHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text_plus" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/default_margin_half"
                android:layout_marginStart="@dimen/default_margin_half"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text_plus" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvBroadcastTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha=".33"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_minus" />

        <TextView
            android:id="@+id/tvBroadcastMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:text=""
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/normal_text" />

        <Button
            android:id="@+id/btnView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/default_margin_45"
            android:layout_marginTop="@dimen/default_margin_25"
            android:background="@drawable/blue_button_smallcurve"
            android:paddingLeft="@dimen/default_margin_30"
            android:paddingRight="@dimen/default_margin_30"
            android:text="@string/view_video"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/normal_text_minus" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/default_margin_extra_large"
        android:background="@color/light_grey" />

</LinearLayout>

