<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llDate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/default_margin">

    <TextView
        android:id="@+id/calendar_date_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=""
        android:textSize="@dimen/normal_text_large" />

    <LinearLayout
        android:id="@+id/event_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/default_margin_half"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/event_id"
            android:layout_width="@dimen/default_margin"
            android:visibility="gone"
            android:layout_height="@dimen/default_margin"
            android:paddingBottom="@dimen/default_margin_2"
            android:src="@drawable/blue_circle" />

        <ImageView
            android:id="@+id/event_two"
            android:layout_width="@dimen/default_margin"
            android:visibility="gone"
            android:layout_height="@dimen/default_margin"
            android:paddingBottom="@dimen/default_margin_2"
            android:src="@drawable/blue_circle" />

        <ImageView
            android:id="@+id/event_three"
            android:layout_width="@dimen/default_margin"
            android:visibility="gone"
            android:layout_height="@dimen/default_margin"
            android:paddingBottom="@dimen/default_margin_2"
            android:src="@drawable/blue_circle" />

    </LinearLayout>
</LinearLayout>